        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint_y: 0.2
                text: "Digit 1"
            Spinner:
                id: r3b1  # ID for the first band of a three-band resistor
                values: app.colour_to_details[0:10]  # Show all colours but gold and silver for first three bands
                on_text: r3b1.background_color = app.return_rgba(r3b1.text)
                on_background_color: app.calculate_resistance()
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint_y: 0.2
                text: "Digit 2"
            Spinner:
                id: r3b2
                values: app.colour_to_details[0:10]
                on_text: r3b2.background_color = app.return_rgba(r3b2.text)
                on_background_color: app.calculate_resistance()
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Multiplier"
                size_hint_y: 0.2
            Spinner:
                id: r3b3
                values: app.colour_to_details[0:10]
                on_text: r3b3.background_color = app.return_rgba(r3b3.text)
                on_background_color: app.calculate_resistance()
        BoxLayout:
            Label:
                id: r3_value
                text: "Hello!"

