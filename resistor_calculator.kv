BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        padding: [10, 10, 10, 10]
        id: band_3_box
#        BoxLayout:
#            Spinner:
#                id: resistor_3_values
#                text: app.current_resistor_3_value
#                values: app.resistor_3_values
#                on_text: app.display_resistor_colours(self.text)
        BoxLayout:
            size_hint_x: 0.15
            Label:
                text: "3 "
                font_size: 36
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            Label:
                halign: 'center'
                size_hint_y: 0.2
                text: "Value\nto\n colour"
            FloatInput:
                id: r3_digits
                size_hint_y: 0.065
                halign: 'center'
                max_char: 3
                multiline: False
                on_text: app.find_colour_bands(r3_digits.text, r3_unit.text, )
            Spinner:
                id: r3_unit
                size_hint_y: 0.065
                values: app.units
                outline_color: (0,0,0)
                outline_width: 5
                on_text: app.find_colour_bands(r3_digits.text, r3_unit.text)
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint_y: 0.2
                text: "Digit 1"
            Spinner:
                id: r3b1  # ID for the first band of a three-band resistor
                values: app.colour_to_digit
                outline_color: (0,0,0)
                outline_width: 5
                on_text: r3b1.background_color = app.return_band_colour("digit", r3b1.text)
                on_background_color: app.calculate_resistance(3)
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint_y: 0.2
                text: "Digit 2"
            Spinner:
                id: r3b2
                values: app.colour_to_digit
                outline_color: (0,0,0)
                outline_width: 5
                on_text: r3b2.background_color = app.return_band_colour("digit", r3b2.text)
                on_background_color: app.calculate_resistance(3)
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Multiplier"
                size_hint_y: 0.2
            Spinner:
                id: r3b3
                values: app.colour_to_multiplier
                outline_color: (0,0,0)
                outline_width: 5
                on_text: r3b3.background_color = app.return_band_colour("multiplier", r3b3.text)
                on_background_color: app.calculate_resistance(3)

        BoxLayout:
        BoxLayout:
        BoxLayout:

        BoxLayout:
            Label:
                id: r3_value
                text: "Hello!"

